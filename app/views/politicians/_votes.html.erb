<div class="card mb-3">
  <div class="card-body">
    <div class="flex justify-between items-center mb-4">
      <h4 class="card-title mb-0">Votes</h4>
      <%= link_to 'Add New Vote', legislations_path, class: 'btn btn-primary' %>
    </div>
    <% if politician.votes.any? %>
      <% politician.votes.each do |vote| %>
        <div class="flex justify-between items-center mb-2">
          <div>
            <%= link_to vote.legislation.title, legislation_vote_path(vote.legislation, vote) %>
          </div>
          <div>
            <%= vote_choice(vote) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>This politician has not voted on any legislation.</p>
    <% end %>
  </div>
</div>
